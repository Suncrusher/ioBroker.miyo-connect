{
  "name": "iobroker.miyo-connect",
  "version": "0.0.1",
  "description": "Connect to your Miyo Controller",
  "author": {
    "name": "Suncrusher",
    "email": "schnupp@gmail.com"
  },
  "homepage": "https://github.com/Suncrusher/ioBroker.miyo-connect",
  "license": "MIT",
  "keywords": [
    "miyo smart gardening water"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Suncrusher/ioBroker.miyo-connect"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^2.5.1"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^2.2.1",
    "@babel/cli": "^7.16.7",
    "@babel/core": "^7.16.0",
    "@babel/plugin-proposal-decorators": "^7.16.0",
    "@babel/preset-env": "^7.16.4",
    "@babel/preset-typescript": "^7.14.5",
    "@iobroker/adapter-react": "1.6.15",
    "@iobroker/testing": "^2.5.2",
    "@material-ui/core": "^4.12.3",
    "@types/chai": "^4.3.0",
    "@types/chai-as-promised": "^7.1.4",
    "@types/gulp": "^4.0.9",
    "@types/mocha": "^9.0.0",
    "@types/node": "^14.17.7",
    "@types/proxyquire": "^1.3.28",
    "@types/react-dom": "^16.9.14",
    "@types/react": "^16.14.11",
    "@types/sinon": "^10.0.2",
    "@types/sinon-chai": "^3.2.8",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.33.0",
    "axios": "^0.24.0",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.26.1",
    "gulp": "^4.0.2",
    "mocha": "^9.1.3",
    "nyc": "^15.1.0",
    "parcel-bundler": "^1.12.5",
    "prettier": "^2.5.0",
    "proxyquire": "^2.1.3",
    "react-dom": "^16.14.0",
    "react": "^16.14.0",
    "rimraf": "^3.0.2",
    "sinon": "^11.1.2",
    "sinon-chai": "^3.7.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.4.0",
    "typescript": "^4.3.5"
  },
  "main": "build/main.js",
  "scripts": {
    "prebuild": "rimraf ./build",
    "build:parcel": "parcel build admin/src/index.tsx -d admin/build",
    "build:ts": "tsc -p tsconfig.build.json",
    "build": "npm run build:ts && npm run build:parcel",
    "watch:parcel": "parcel admin/src/index.tsx -d admin/build --hmr-port 1235",
    "watch:ts": "tsc -p tsconfig.build.json --watch",
    "watch": "npm run watch:ts",
    "test:ts": "mocha --config test/mocharc.custom.json src/**/*.test.ts",
    "test:package": "mocha test/package --exit",
    "test:unit": "mocha test/unit --exit",
    "test:integration": "mocha test/integration --exit",
    "test": "npm run test:ts && npm run test:package",
    "check": "tsc --noEmit",
    "coverage": "nyc npm run test:ts",
    "lint": "eslint --ext .ts,.tsx src/ admin/src/",
    "release": "release-script"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.test.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "bugs": {
    "url": "https://github.com/Suncrusher/ioBroker.miyo-connect/issues"
  },
  "readmeFilename": "README.md"
}